<Window x:Class="MathStudioWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathStudioWpf"
        mc:Ignorable="d"
        Title="Math Studio"
        WindowState="Maximized"
        Height="450"
        Width="800"
        Background="WhiteSmoke"
        MouseWheel="Window_MouseWheel"
        Loaded="Window_Loaded"
        SizeChanged="Window_SizeChanged">
    <Window.Resources>
        <Style x:Key="DefaultButton" TargetType="Button">
            <Setter Property="FontSize" Value="18"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid>
            <Border x:Name="GraphWrapper" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Canvas x:Name="Graph" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MouseLeftButtonDown="Graph_MouseLeftButtonDown" MouseDown="Graph_MouseLeftButtonDown" MouseMove="Graph_MouseMove"/>
            </Border>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="2" Background="White" VerticalAlignment="Bottom">
                <Button Style="{StaticResource DefaultButton}" Margin="5" Content="Smazat všechny" Click="Clear_ButtonClick"/>
                <StackPanel Margin="5">
                    <CheckBox x:Name="DisableGridCheckBox" Content="Deaktivovat mřížku" IsChecked="{Binding DisableGrid}"/>
                </StackPanel>
                <TextBlock x:Name="mouseDeltaText" Margin="5"/>
                <TextBlock x:Name="mouseDeltaDeltaText" Margin="5"/>
            </StackPanel>
            <!--<Button Content="Create new expression" Click="Button_Click"/>-->
            <StackPanel Grid.Column="0">
                <Button Content="Přidat funkci" Style="{StaticResource DefaultButton}" Margin="5" Click="Add_ButtonClick"/>
                <TextBlock x:Name="ErrorMessage" Foreground="Red" Visibility="Visible" FontSize="15" TextWrapping="Wrap"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalAlignment="Stretch">
                    <ItemsControl x:Name="ExpressionsList" ItemsSource="{Binding Graphables}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="10" Padding="10" Background="WhiteSmoke" CornerRadius="3">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="7" ShadowDepth="0" Opacity=".5"/>
                                    </Border.Effect>
                                    <StackPanel>
                                        <TextBox Text="{Binding ExpressionString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="20"/>
                                        <!--<Label Content="{Binding Domain, StringFormat=Domain \= {0}}"/>
                                        <Label Content="{Binding Range, StringFormat=Range \= {0}}"/>-->
                                        <Button Content="Smazat" Click="RemoveItem_ButtonClick"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>

                        </ItemsControl.ItemTemplate>

                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
            
        </Grid>
    </Grid>
</Window>
